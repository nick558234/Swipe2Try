<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Swipe2Try</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Swipe2Try.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script> 
</head>
<body>
    <header class="border-b border-gray-200 py-4">
        <div class="container mx-auto px-4 flex items-center justify-between">
            <a asp-area="" asp-page="/Index" class="text-xl font-semibold">
                Swipe2Try
            </a>
            <nav class="hidden md:flex items-center space-x-8">
                <a asp-area="" asp-page="/HowItWorks" class="text-gray-600 hover:text-black">
                    How It Works
                </a>
                <a asp-area="" asp-page="/Features" class="text-gray-600 hover:text-black">
                    Features
                </a>
                <a asp-area="" asp-page="/Contact" class="text-gray-600 hover:text-black">
                    Contact
                </a>
            </nav>
            <a asp-area="" asp-page="/SignUp" class="bg-black text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-800">
                Sign Up
            </a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 py-8">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row items-center justify-between">
                <div class="mb-4 md:mb-0">
                    <a asp-area="" asp-page="/Index" class="text-lg font-semibold">
                        Swipe2Try
                    </a>
                </div>
                <div class="flex space-x-6 mb-4 md:mb-0">
                    <a asp-area="" asp-page="/Privacy" class="text-gray-600 hover:text-black text-sm">
                        Privacy Policy
                    </a>
                    <a asp-area="" asp-page="/Terms" class="text-gray-600 hover:text-black text-sm">
                        Terms of Service
                    </a>
                    <a asp-area="" asp-page="/Contact" class="text-gray-600 hover:text-black text-sm">
                        Contact
                    </a>
                </div>
                <div class="text-gray-600 text-sm">
                    © 2025 Swipe2Try. All rights reserved.
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>