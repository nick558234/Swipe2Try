   @page
   @model Swipe2Try.Pages.swipeModel
   @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
   @using Swipe2Try.Components
@{
}

<div class="container mx-auto px-4 py-8">
    <header class="text-center mb-8">
        <h1 class="text-4xl font-bold text-purple-600">Swipe 'n Try</h1>
        <p class="text-xl text-gray-600 mt-2">Your next meal is just a swipe away.</p>
    </header>

    <div class="relative max-w-md mx-auto">
        <div id="dish-stack" class="relative h-[500px] w-full">
            @foreach (var dish in Model.Dishes)
            {
                <Card ImageUrl="@dish.ImageUrl"
                      Title="@dish.Title"
                      Description="@dish.Description"
                      Restaurant="@dish.Restaurant"
                      HealthFactor="@dish.HealthFactor"
                      Price="@dish.Price"
                      Tags="@dish.Tags" />
            }
        </div>
    </div>
</div>





