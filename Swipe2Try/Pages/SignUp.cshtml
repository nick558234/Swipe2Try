@page
@model Swipe2Try.Pages.SignUpModel
@{
}

<div class="min-h-screen flex flex-col">
    <main class="flex-1 flex items-center justify-center p-4">
        <div class="w-full max-w-md bg-white rounded-lg shadow-sm border border-gray-200 p-8">
            <div class="text-center mb-6">
                <h1 class="text-2xl font-bold">Create your account</h1>
                <p class="text-gray-600 mt-2">Start discovering amazing dishes today</p>
            </div>

            <div class="space-y-4">

                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <span class="w-full border-t border-gray-200"></span>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                        <span class="bg-white px-2 text-gray-600">Or</span>
                    </div>
                </div>

                <div class="space-y-4">
                    <div class="space-y-2">
                        <input type="text" placeholder="Full Name" class="w-full px-3 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent">
                    </div>
                    <div class="space-y-2">
                        <input type="email" placeholder="Email" class="w-full px-3 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent">
                    </div>
                    <div class="space-y-2">
                        <input type="password" placeholder="Password" class="w-full px-3 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent">
                    </div>
                    <div class="space-y-2">
                        <select class="w-full px-3 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent">
                            <option value="" disabled selected>Select your role</option>
                            <option value="restaurant-owner">Resta urant Owner</option>
                            <option value="user">User</option>
                        </select>
                    </div>
                    <button class="w-full bg-black hover:bg-gray-800 text-white py-3 px-4 rounded-md">
                        Sign Up
                    </button>
                </div>

                <div class="text-center text-sm text-gray-600 mt-6">
                    Already have an account?
                    <a asp-area="" asp-page="/Login" class="font-medium text-black hover:underline">
                        Log in
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>
