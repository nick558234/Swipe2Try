@page
@model Swipe2Try.Pages.RestaurantOwner.CreateModel
@{
    Layout = "_RestaurantOwnerLayout";
    ViewData["ActivePage"] = "MyDishes";
}

<div class="flex items-center justify-between">
    <h3 class="text-gray-700 text-3xl font-medium">Create New Dish</h3>
    <a asp-area="" asp-page="/RestaurantOwner/Index" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded">
        Cancel
    </a>
</div>

<div class="mt-8">
    <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="col-span-1 md:col-span-2">
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="dish-image">
                        Dish Image
                    </label>
                    <div class="flex items-center justify-center w-full">
                        <label class="flex flex-col w-full h-32 border-4 border-dashed hover:bg-gray-100 hover:border-orange-300 group">
                            <div class="flex flex-col items-center justify-center pt-7">
                                <svg class="w-10 h-10 text-gray-400 group-hover:text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <p class="pt-1 text-sm tracking-wider text-gray-400 group-hover:text-orange-600">
                                    Select a photo
                                </p>
                            </div>
                            <input type="file" class="opacity-0" id="dish-image" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="dish-name">
                    Dish Name
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="dish-name" type="text" placeholder="Enter dish name">
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="category">
                    Category
                </label>
                <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="category">
                    <option>Select a category</option>
                    <option>Appetizers</option>
                    <option>Main Courses</option>
                    <option>Desserts</option>
                    <option>Beverages</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="health-factor">
                    Health Factor (1-10)
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="health-factor" type="number" min="1" max="10" placeholder="Enter health factor">
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="price">
                    Price (€)
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="price" type="number" step="0.01" placeholder="Enter price">
            </div>

            <div class="col-span-1 md:col-span-2">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="description">
                    Description
                </label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="description" rows="4" placeholder="Enter dish description"></textarea>
            </div>

            <div class="col-span-1 md:col-span-2">
                <label class="block text-gray-700 text-sm font-bold mb-2">
                    Dietary Options
                </label>
                <div class="flex flex-wrap">
                    <div class="flex items-center mr-6 mb-2">
                        <input type="checkbox" id="vegetarian" class="form-checkbox h-5 w-5 text-orange-600">
                        <label for="vegetarian" class="ml-2 text-gray-700">Vegetarian</label>
                    </div>
                    <div class="flex items-center mr-6 mb-2">
                        <input type="checkbox" id="vegan" class="form-checkbox h-5 w-5 text-orange-600">
                        <label for="vegan" class="ml-2 text-gray-700">Vegan</label>
                    </div>
                    <div class="flex items-center mr-6 mb-2">
                        <input type="checkbox" id="gluten-free" class="form-checkbox h-5 w-5 text-orange-600">
                        <label for="gluten-free" class="ml-2 text-gray-700">Gluten-Free</label>
                    </div>
                    <div class="flex items-center mr-6 mb-2">
                        <input type="checkbox" id="dairy-free" class="form-checkbox h-5 w-5 text-orange-600">
                        <label for="dairy-free" class="ml-2 text-gray-700">Dairy-Free</label>
                    </div>
                    <div class="flex items-center mr-6 mb-2">
                        <input type="checkbox" id="nut-free" class="form-checkbox h-5 w-5 text-orange-600">
                        <label for="nut-free" class="ml-2 text-gray-700">Nut-Free</label>
                    </div>
                </div>
            </div>

            <div class="col-span-1 md:col-span-2">
                <label class="block text-gray-700 text-sm font-bold mb-2">
                    Ingredients
                </label>
                <div class="flex flex-wrap items-center mb-2">
                    <input class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mr-2 mb-2" type="text" placeholder="Add ingredient">
                    <button type="button" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded mb-2">
                        Add
                    </button>
                </div>
                <div class="bg-gray-100 p-3 rounded">
                    <div class="flex flex-wrap">
                        <span class="bg-white rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                            Pasta <button class="ml-1 text-red-500 font-bold">×</button>
                        </span>
                        <span class="bg-white rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                            Eggs <button class="ml-1 text-red-500 font-bold">×</button>
                        </span>
                        <span class="bg-white rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                            Bacon <button class="ml-1 text-red-500 font-bold">×</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-end mt-8">
            <button class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
                Create Dish
            </button>
        </div>
    </form>
</div>
